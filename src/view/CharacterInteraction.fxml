<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER"
          xmlns="http://javafx.com/javafx/11.0.1">

    <Label fx:id="npcIntercationLabel" alignment="CENTER" text="What to do with [...] : "
           GridPane.columnSpan="2"/>

    <Button fx:id="talkButton" mnemonicParsing="false" text="Talk" GridPane.rowIndex="1"/>

    <Button fx:id="AttackButton" alignment="CENTER" mnemonicParsing="false" text="Attack"
            GridPane.columnSpan="1" GridPane.rowIndex="2"/>

    <Button fx:id="lookButton" mnemonicParsing="false" text="Look" GridPane.columnIndex="1"
            GridPane.rowIndex="1"/>

</GridPane>
