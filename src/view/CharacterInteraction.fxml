<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="SOMETIMES" />
      <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>

    <Label fx:id="npcIntercationLabel" alignment="CENTER" text="What to do with [...] : " GridPane.columnSpan="2">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <font>
         <Font size="18.0" />
      </font></Label>

    <Button fx:id="talkButton" mnemonicParsing="false" text="Talk" GridPane.rowIndex="1" />

    <Button fx:id="AttackButton" alignment="CENTER" mnemonicParsing="false" text="Attack" GridPane.columnSpan="1" GridPane.rowIndex="2" />

    <Button fx:id="lookButton" mnemonicParsing="false" text="Look" GridPane.columnIndex="1" GridPane.rowIndex="1" />

</GridPane>
