<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
            id="directionPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="512.0"
            prefWidth="512.0" fx:controller="controller.DirectionController">

    <top>
        <Button fx:id="buttonTop" mnemonicParsing="false" onAction="#goTop" text="Button"
                BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <fx:include fx:id="canevas" source="Canevas.fxml"/>
    </center>

    <bottom>
        <Button fx:id="buttonBottom" mnemonicParsing="false" onAction="#goBottom" text="Button"
                BorderPane.alignment="CENTER"/>
    </bottom>
    <left>
        <Button fx:id="buttonLeft" mnemonicParsing="false" onAction="#goLeft" text="Button"
                textAlignment="CENTER" BorderPane.alignment="CENTER"/>
    </left>
    <right>
        <Button fx:id="buttonRight" mnemonicParsing="false" onAction="#goRight" text="Button"
                textAlignment="CENTER" BorderPane.alignment="CENTER"/>
    </right>
</BorderPane>
